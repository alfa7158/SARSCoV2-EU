<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Selection.mainSelect.mainSelectFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/mainSelectNews"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"


                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/mainSelectColor"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="87dp"
                    android:layout_height="103dp"
                    android:src="@drawable/newsicone" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="71dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/mainSelectColor"
                    android:fontFamily="@font/abel"
                    android:gravity="center|right"
                    android:text="@string/news"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="5dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mainSelectVccine"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"


                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/mainSelectColor"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vaccine" />

                <TextView
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/abel"
                    android:gravity="center|right"
                    android:text="@string/VaccineAndtreatments"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="5dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mainSelectWorldUpdate"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"


                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/mainSelectColor"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="87dp"
                    android:layout_height="126dp"
                    android:layout_gravity="top|left"
                    android:src="@drawable/worldupdateicone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/abel"
                    android:foregroundGravity="center"
                    android:gravity="right"
                    android:text="@string/worldUpdate"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="5dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mainSelectCovidEducation"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"


                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/mainSelectColor"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:foregroundGravity="center"
                    android:src="@drawable/covidbookicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/abel"
                    android:gravity="center|right"
                    android:text="@string/covid_book"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="5dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mainSelectCheckYouHaveCovid"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"


                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/mainSelectColor"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:foregroundGravity="center"
                    android:src="@drawable/checkforcovidicone" />

                <TextView
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:fontFamily="@font/abel"
                    android:gravity="center|left"
                    android:text="@string/checkIfYouHaveCovid"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="5dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mainSelectGraph"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"


                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/mainSelectColor"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="99dp"
                    android:layout_height="138dp"
                    android:foregroundGravity="left|center"
                    android:src="@drawable/graphs" />

                <TextView
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:fontFamily="@font/abel"
                    android:gravity="center|left"
                    android:text="@string/graph"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="5dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/setting"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"


                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/mainSelectColor"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="74dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/setting" />

                <TextView
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:text="@string/Settings"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="5dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>