<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.bookOfCovid.bookOfCovidMainSelectFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/mainSelectBookOfCovidVideo"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"


                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/categoriesSelectionColor"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="91dp"
                    android:layout_height="127dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/movieicone" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="71dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/mainSelectColor"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:text="@string/Videos"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="5dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mainSelectBookOfCovidAudio"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"


                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/categoriesSelectionColor"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/music_audio_22964" />

                <TextView
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:text="@string/Music"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="5dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mainSelectBookOfCovidPic"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"


                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/categoriesSelectionColor"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/picturesicone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/abel"
                    android:foregroundGravity="center|right"
                    android:gravity="center"
                    android:text="@string/pictures"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="5dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bookOfCovidMainSelectPdf"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"


                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/categoriesSelectionColor"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="125dp"
                    android:layout_height="141dp"
                    android:layout_gravity="center|left"
                    android:foregroundGravity="center"
                    android:src="@drawable/pdficone" />

                <TextView
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:text="@string/PDF"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="5dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mainSelectBookOfCovidDocx"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"


                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/categoriesSelectionColor"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="112dp"
                    android:layout_height="164dp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/office_word_docx_15855" />

                <TextView
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:fontFamily="@font/abel"
                    android:gravity="center"
                    android:text="@string/Docx"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="5dp" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="59dp"
        android:layout_height="54dp"

        android:layout_marginTop="630dp"
        android:layout_marginRight="30dp"
        android:background="#A32B2B"
        android:backgroundTint="@color/mainSelectColor"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#970000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>