<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/phaseOneSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/phaseone" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="@string/PhaseI"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/phaseThreeSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/phasethreee" />

            <TextView
                android:id="@+id/auPopulationInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="@string/Phase_III"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/phaseTwoSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/phasetwoo" />

            <TextView
                android:id="@+id/auCountryInfo"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="@string/phaseTwo"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/phaseFourSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/phasefour" />

            <TextView
                android:id="@+id/auContinentInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/Phase_IV"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/fdaApprovedVaccineSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/fdavaccine" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/FDA_APPROVED"
                android:textSize="24dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>